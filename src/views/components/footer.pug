mixin footer
  .footer-wrapper(class=(attributes.block == 'text-us' || attributes.block == 'requisite'|| attributes.block == 'clients' ? 'alt' : ''))
    if (attributes.block)
      case attributes.block 
        when 'text-us'
          +text-us
        when 'text-us-white'
          +text-us-white
        when 'requisite'
          +requisite
        when 'clients'
          +clients
        when 'feedback'
          +feedback
    footer.footer(class=(attributes.block ? 'footer--big' : ''))
      .footer__inner 
        .container 
          .footer__row 
            .footer__col.desktop
              a.footer__logo(href="#")
                +logo-white-svg.footer__logo-svg
              .footer__text 
                |© 2023 КЭАЗИТ. #[br] Все права защищены
