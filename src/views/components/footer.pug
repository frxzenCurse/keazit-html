mixin footer
  .footer-wrapper(class=(attributes.block == 'text-us' || attributes.block == 'requisite' ? 'alt' : ''))
    if (attributes.block)
      case attributes.block 
        when 'text-us'
          +text-us
        when 'text-us-white'
          +text-us-white
        when 'requisite'
          +requisite
    footer.footer(class=(attributes.block ? 'footer--big' : ''))
      .footer__inner 
        .container 
          .footer__row 
            .footer__col.desktop
              a.footer__logo(href="#")
                +logo-white-svg.footer__logo-svg
              .footer__text 
                |© 2023 КЭАЗИТ. #[br] Все права защищены
              .footer__made
                |Разработка сайта: 
                a.footer__made-link(href="#")
                  +made-svg.footer__made-svg
            .footer__col
              .footer__column
                .footer__heading 
                  |Разделы
                ul.footer__list
                  each item in ['О компании', 'Каталог', 'Информация', 'Контакты'] 
                    li.footer__list-item 
                      a.footer__text(href="#")
                        |#{item} 
