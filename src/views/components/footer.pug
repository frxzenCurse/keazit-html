mixin footer
  footer.footer
    .footer__inner 
      .container 
        .footer__row 
          .footer__col.desktop
            a.footer__logo(href="#")
              +logo-white-svg.footer__logo-svg
            .footer__text 
              |© 2023 КЭАЗИТ. #[br] Все права защищены
            .footer__made
              |Разработка сайта: 
              a.footer__made-link(href="#")
                +made-svg.footer__made-svg
          .footer__col
            .footer__column
              .footer__heading 
                |Разделы
              ul.footer__list
                each item in ['О компании', 'Каталог', 'Информация', 'Контакты'] 
                  li.footer__list-item 
                    a.footer__text(href="#")
                      |#{item} 
            .footer__column
              .footer__heading 
                |Документы
              ul.footer__list
                each item in ['Политика конфиденциальности', 'Пользовательское соглашение', 'Карта сайта',] 
                  li.footer__list-item 
                    a.footer__text(href="#")
                      |#{item} 
